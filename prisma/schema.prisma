generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Merchant {
  id          String   @id @default(cuid())
  name        String
  apiKeyHash  String
  jpycAddress String
  webhookUrl  String?
  createdAt   DateTime @default(now())
  payments    Payment[]
}

model Payment {
  id          String   @id @default(cuid())
  merchant    Merchant @relation(fields: [merchantId], references: [id])
  merchantId  String
  orderId     String
  amountJpy   Int
  amountJpyc  Decimal  @db.Decimal(78, 0)
  status      String   // "pending" | "paid" | "expired"
  txHash      String?  @unique
  expiresAt   DateTime
  createdAt   DateTime @default(now())
  @@index([merchantId, orderId])
}